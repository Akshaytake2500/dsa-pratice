class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        int maxCandie = maxAmountOfCandie(candies);
        int n = candies.length;
        System.out.println(n);
        List<Boolean> result = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            result.add(extraCandies+candies[i]>=maxCandie);
        }
        return result;
    }

    public int maxAmountOfCandie(int[] candies) {
        int n = candies.length;
        int max = 0;
        for (int i = 0; i < n; i++) {
            if (max < candies[i]) {
                max = candies[i];
            }
        }
        System.out.println(max);
        return max;
    }
}
